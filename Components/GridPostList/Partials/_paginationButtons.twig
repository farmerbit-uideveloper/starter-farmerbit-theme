
{% if loadMore %}
  {% if pagination.next %}
    <div class="pagination pagination--load-more">
      <a data-action="loadMore" href="{{ pagination.next.link }}">{{ label.loadMore }}</a>
    </div>
  {% endif %}
{% else %}
  <div class="pagination {% if not pagination.prev %} pagination--prevDisabled{% endif %} pagination--page">
    {% if pagination.prev %}
      <a href="{{ pagination.prev.link }}" class="pagination-prevLink button button--small"><i data-feather="arrow-left" class="arrow"></i> {{ labels.previous }}</a>
    {% endif %}
    {% if pagination.next %}
      <a href="{{ pagination.next.link }}" class="pagination-nextLink button button--small">{{ labels.next }} <i data-feather="arrow-right" class="arrow"></i></a>
    {% endif %}
  </div>
{% endif %}
