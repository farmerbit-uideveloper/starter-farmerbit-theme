{% if template and template == 'hero' %}
	<section class="fcComponent" is="breadcrumbs">

		<div class="breadcrumbs section">
			{{ breadcrumbs }}
		</div>

	</section>
{% else %}
	<section class="fcComponent" is="breadcrumbs">

		<div class="breadcrumbs section">

			<div class="container-lg">

				<div class="row">
					
					<div class="{% if offset == '1' %}col-md-8 offset-md-2{% else %}col-lg-12{% endif %}">
						{{ breadcrumbs }}
					</div>

				</div>
				
			</div>

		</div>

	</section>
{% endif %}