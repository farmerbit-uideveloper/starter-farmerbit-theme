<div
	{{ options.sectionId|length ? 'id=' ~ options.sectionId }}
    class="fcComponent{{ options.sectionClasses ? ' ' ~ options.sectionClasses : ' section-smaller mt-3 mt-sm-5 mt-md-5 mt-lg-10' }}{{ options.theme|length ? ' ' ~ options.theme }}"
	is="breadcrumbs">

	{% if options.container %}
	<div class="container-lg"> 
	{% endif %}

		{% if options.row %}
		<div class="row"> 
		{% endif %}

			{% if options.colsClasses|length %}
			<div class="{{ options.colsClasses }}"> 
			{% endif %}

				<div class="breadcrumbs">
					{{ breadcrumbs }}
				</div>

			{% if options.colsClasses|length %}
			</div><!-- cols classes --> 
			{% endif %}

		{% if options.row %}
		</div><!-- .row --> 
		{% endif %}

	{% if options.container %}
	</div><!-- .container --> 
	{% endif %}

</div>