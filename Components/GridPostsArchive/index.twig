<div class="flyntComponent {{ options.theme }}" is="flynt-grid-posts-archive">
    
	<div class="section">
        
		<div class="container-lg">

            {% if terms %}
            	{% include 'Partials/_filter.twig' %}
            {% endif %}

			<ul class="grid">

				<div class="row">

					{% for post in posts %}

						<div class="col-md-3">

							<li class="grid-item">

								<figure class="grid-item__figure">

									<a href="{{ post.link }}">
										<img 
											class="grid-item__image img-fluid lazyload"
											src="{{ post.meta('brand_image').src }}"
											alt="{{ post.meta('brand_image').src.alt|e }}">
									</a>

								</figure>
							
							</li>

						</div>
					
					{% endfor %}
				
				</ul>

			</div>

            {% set pagination = posts.pagination %}
            
			{% if pagination.pages %}
            	{% include 'Partials/_paginationButtons.twig' %}
            {% endif %}

        </div>

    </div>

</div>
