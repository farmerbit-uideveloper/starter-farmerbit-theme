{% if section is not defined or section|length %}
<div
	{{ options.sectionId|length ? 'id=' ~ options.sectionId }}
	class="fcComponent{{ options.sectionClasses ? ' ' ~ options.sectionClasses }}{{ options.theme|length ? ' ' ~ options.theme }}"
	is="info">
{% endif %}

	{% if options.container %}
	<div class="container-lg"> 
	{% endif %}

		{% if options.row %}
		<div class="row"> 
		{% endif %}

			{% if options.colsClasses|length %}
			<div class="{{ options.colsClasses }}"> 
			{% endif %}

				<div class="info{{ options.itemClasses|length ? ' ' ~ options.itemClasses }}">

					<div class="info__body">

						{% if title is defined and title|length %}

							{% set titleTagOpen  = (titleType) ? titleType : '<h2>' %}
							{% set titleTagClose = (titleType) ? titleType : '</h2>' %}
					
							<{{ titleTagOpen }} class="info__title {{ titleAlignment }} {{ options.itemClasses|length ? ' ' ~ options.itemClasses }}">
								{{ title|trim|e('wp_kses_post') }}
							</{{ titleTagClose }}>

						{% endif %}

						{% if descriptionHtml is defined and descriptionHtml|length %}
							<div class="info__description {{ options.itemClasses|length ? ' ' ~ options.itemClasses }}">
								{{ descriptionHtml|trim|e('wp_kses_post') }}
							</div>
						{% endif %}
						
					</div>

				</div>

			{% if options.colsClasses|length %}
			</div><!-- cols classes --> 
			{% endif %}

		{% if options.row %}
		</div><!-- .row --> 
		{% endif %}

	{% if options.container %}
	</div><!-- .container --> 
	{% endif %}

{% if section is not defined or section|length %}
</div>
{% endif %}