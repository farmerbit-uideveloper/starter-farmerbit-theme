<!DOCTYPE html>
<html class="html {{ body_class }}" lang="{{ site.language }}">

	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="alternate" type="application/rss+xml" title="{{ site.title }} {{ __('Feed', 'uideveloper') }}" href="{{ site.rss2 | e('esc_url') }}">
		{{ function('wp_head') }}
	</head>

	<body class="no-js">

		<a href="#mainContent" class="skipLink">{{ __("Skip to main content", "flynt") }}</a>

		{% block layout %}

			<div class="pageWrapper">
				
				<header class="mainHeader">
					{% block header %}
						{{ renderComponent('MenuNavigation') }}
					{% endblock %}
				</header>

				<main id="mainContent" class="mainContent" aria-label="{{ __('Content', 'uideveloper') }}">
					{% if function('post_password_required') %}
						{{ function('get_the_password_form') }}
					{% else %}
						{% block content %}
							No <code>{{ '{% block content %}' }}</code> defined for this template.
						{% endblock %}
					{% endif %}
				</main>

				<footer class="mainFooter">
					{% block footer %}
						{{ renderComponent('ColumnsFooter') }}
					{% endblock %}
				</footer>

			</div>

		{% endblock %}

		{% if menuHasSearch %}

			{{ renderComponent('Popup', { 'type': 'search' }) }}

		{% endif %}

		<div class="wpFooter">{{ function('wp_footer') }}</div>

		{{ renderComponent( 'PageTransition' ) }}

	</body>

</html>
